{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@images/*": ["./src/images/*"],
      "@icons/*": ["./src/icons/*"]
    }
  },
  "include": ["./src/**/*", "gatsby-*.ts"]
}
